<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/hatter"
    tools:context=".plan.Plan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="197dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            >

            <Button
                android:id="@+id/ownPlan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/input_bg"
                android:drawableRight="@drawable/plan"
                android:text="Készíts saját edzéstervet!"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Súlyzós edzés"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:src="@drawable/edzoterem" />

                <Button
                    android:id="@+id/btn5DayGym"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5 napos edzésterv"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/down_arrow"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <ImageView
                    android:id="@+id/plan5DayGym"
                    android:layout_width="wrap_content"
                    android:layout_height="246dp"
                    android:src="@drawable/gym5napos"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn3DayGym"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3 napos edzésterv"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/down_arrow"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <ImageView
                    android:id="@+id/plan2DayGym"
                    android:layout_width="wrap_content"
                    android:layout_height="246dp"
                    android:src="@drawable/gym5napos"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Saját testsúlyos edzés"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:background="@color/black"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/sajattestsulyos" />

                <Button
                    android:id="@+id/btnAllDayWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Teljes testes edzésterv"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:drawableRight="@drawable/down_arrow"
                    android:gravity="center"
                    android:background="@drawable/input_bg" />

                <ImageView
                    android:id="@+id/planAllDayWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="246dp"
                    android:src="@drawable/gym5napos"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn2DayWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2 napos edzésterv"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/down_arrow"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <ImageView
                    android:id="@+id/plan2DayWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="246dp"
                    android:src="@drawable/gym5napos"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>