<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/hatter"
    tools:context=".plan.Plan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="197dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            >

            <Button
                android:id="@+id/ownPlan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/input_bg"
                android:drawableRight="@drawable/plan"
                android:text="Készíts saját edzéstervet!"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Súlyzós edzés"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:src="@drawable/sulyzos_edzesterv" />

                <Button
                    android:id="@+id/btn5DayGym"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5 napos edzésterv"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/down_arrow"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <com.jsibbold.zoomage.ZoomageView
                    android:id="@+id/plan5DayGym"
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:src="@drawable/plan_gym5napos"
                    android:visibility="gone"
                    app:zoomage_restrictBounds="false"
                    app:zoomage_animateOnReset="true"
                    app:zoomage_autoResetMode="UNDER"
                    app:zoomage_autoCenter="true"
                    app:zoomage_zoomable="true"
                    app:zoomage_translatable="true"
                    app:zoomage_minScale="0.6"
                    app:zoomage_maxScale="8"/>

                <Button
                    android:id="@+id/btn3DayGym"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3 napos edzésterv"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/down_arrow"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <com.jsibbold.zoomage.ZoomageView
                    android:id="@+id/plan3DayGym"
                    android:layout_width="wrap_content"
                    android:layout_height="260dp"
                    android:src="@drawable/plan_gym3napos"
                    android:visibility="gone"
                    app:zoomage_restrictBounds="false"
                    app:zoomage_animateOnReset="true"
                    app:zoomage_autoResetMode="UNDER"
                    app:zoomage_autoCenter="true"
                    app:zoomage_zoomable="true"
                    app:zoomage_translatable="true"
                    app:zoomage_minScale="0.6"
                    app:zoomage_maxScale="8"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Saját testsúlyos edzés"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:background="@color/black"/>

                <ImageView
                    android:layout_width="410dp"
                    android:layout_height="155dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/sajatsulyosedzes" />

                <Button
                    android:id="@+id/btnAllDayWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Teljes testes edzésterv"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:drawableRight="@drawable/down_arrow"
                    android:gravity="center"
                    android:background="@drawable/input_bg" />

                <com.jsibbold.zoomage.ZoomageView
                    android:id="@+id/planAllDayWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:src="@drawable/plan_workoutmindennapos"
                    android:visibility="gone"
                    app:zoomage_restrictBounds="false"
                    app:zoomage_animateOnReset="true"
                    app:zoomage_autoResetMode="UNDER"
                    app:zoomage_autoCenter="true"
                    app:zoomage_zoomable="true"
                    app:zoomage_translatable="true"
                    app:zoomage_minScale="0.6"
                    app:zoomage_maxScale="8"/>

                <Button
                    android:id="@+id/btn2DayWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2 napos edzésterv"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/down_arrow"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <com.jsibbold.zoomage.ZoomageView
                    android:id="@+id/plan2DayWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:src="@drawable/plan_workout2napos"
                    android:visibility="gone"
                    android:layout_marginBottom="25dp"
                    app:zoomage_restrictBounds="false"
                    app:zoomage_animateOnReset="true"
                    app:zoomage_autoResetMode="UNDER"
                    app:zoomage_autoCenter="true"
                    app:zoomage_zoomable="true"
                    app:zoomage_translatable="true"
                    app:zoomage_minScale="0.6"
                    app:zoomage_maxScale="8"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>