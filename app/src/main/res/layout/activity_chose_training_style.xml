<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hatter"
    android:id="@+id/drawerLayout"
    tools:context=".ChoseTrainingStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <Button
            android:id="@+id/Workoutt"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/londrina_shadow"
            android:gravity="center"
            android:text="Saját testsúlyos edzés"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnGymm"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/londrina_shadow"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Súlyzós edzés"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnEdzesterv"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/londrina_shadow"
            android:gravity="center"
            android:text="Edzéstervek"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Kalória Kalkulátor"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txtLicence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Developed by Fajszi Adam"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:layout_gravity="start">

        <include layout="@layout/nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>